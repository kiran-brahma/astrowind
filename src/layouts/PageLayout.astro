---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

import { headerData, footerData } from '~/navigation';



const { metadata } = Astro.props;
---

<Layout metadata={metadata}>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <slot name="header">
    <Header {...headerData} isSticky showRssFeed showToggleTheme />
  </slot>
  <main>
    <div
    class="mx-auto prose-stone prose-lg max-w-4xl dark:prose-invert  text-black dark:text-white prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8">

      <slot />
    </div>
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
