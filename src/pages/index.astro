      <h2 class="mb-4 text-center text-2xl font-bold md:mb-8 lg:text-3xl">Trusted by the best</h2>   
          <Image class="mx-auto" src={Customers} alt="Knighthood Customers" width="800" height="600" decoding="async" />
      
    
    </div>
  </div>
<!-- Stats Widget ****************** -->

<Stats
