---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
}

const { 
  title = "Knighthood - Security, Facility and Staffing Solutions across India",
  description = "Simplify your staffing needs with our integrated services for all your blue and grey collar staffing requirements across India.",
  canonical = Astro.url.href
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonical}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/src/assets/favicons/logo.png">
  
  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={Astro.url}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="/src/assets/favicons/logo.png">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={Astro.url}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content="/src/assets/favicons/logo.png">
  
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Tailwind CSS is included via Astro's build process -->
</head>
<body class="font-sans text-gray-800 antialiased">
  <!-- Header/Navigation -->
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="container mx-auto px-4">
      <nav class="flex justify-between items-center py-4">
        <a href="/" class="flex items-center">
          <img src="/src/assets/favicons/logo.png" alt="Knighthood Logo" class="h-10">
        </a>
        
        <div class="hidden md:flex space-x-8">
          <a href="/" class="nav-link">Home</a>
          <a href="/services" class="nav-link">Services</a>
          <a href="/pricing" class="nav-link">Pricing</a>
          <a href="/blog" class="nav-link">Blog</a>
          <a href="/contact" class="nav-link">Contact</a>
        </div>
        
        <div class="flex items-center space-x-4">
          <a href="/contact" class="hidden md:inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition duration-300">
            Schedule a Call
          </a>
          
          <button class="mobile-menu-toggle md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </nav>
    </div>
    
    <!-- Mobile Menu (Hidden by default) -->
    <div class="mobile-menu hidden bg-white shadow-lg absolute w-full">
      <div class="container mx-auto px-4 py-3">
        <div class="flex flex-col space-y-3">
          <a href="/" class="mobile-nav-link py-2">Home</a>
          <a href="/services" class="mobile-nav-link py-2">Services</a>
          <a href="/pricing" class="mobile-nav-link py-2">Pricing</a>
          <a href="/blog" class="mobile-nav-link py-2">Blog</a>
          <a href="/contact" class="mobile-nav-link py-2">Contact</a>
          <a href="/contact" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition duration-300 text-center">
            Schedule a Call
          </a>
        </div>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="mb-8 md:mb-0">
          <img src="/images/logo-white.svg" alt="Knighthood Logo" class="h-10 mb-4">
          <p class="text-gray-400 mb-4">Knighthood Corporate Services Pvt Ltd.</p>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
              <i class="fab fa-linkedin-in"></i>
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
              <i class="fab fa-facebook-f"></i>
            </a>
          </div>
        </div>
        
        <div>
          <h4 class="text-lg font-semibold mb-4">Our Solutions</h4>
          <ul class="space-y-2">
            <li><a href="/services/security" class="text-gray-400 hover:text-white transition-colors duration-300">Security</a></li>
            <li><a href="/services/facility-management" class="text-gray-400 hover:text-white transition-colors duration-300">Facility Management</a></li>
            <li><a href="/services/staffing" class="text-gray-400 hover:text-white transition-colors duration-300">Staffing</a></li>
            <li><a href="/services/payroll" class="text-gray-400 hover:text-white transition-colors duration-300">Payroll</a></li>
            <li><a href="/services/verification" class="text-gray-400 hover:text-white transition-colors duration-300">Employee Verification</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-lg font-semibold mb-4">Company</h4>
          <ul class="space-y-2">
            <li><a href="/about" class="text-gray-400 hover:text-white transition-colors duration-300">About Us</a></li>
            <li><a href="/careers" class="text-gray-400 hover:text-white transition-colors duration-300">Careers</a></li>
            <li><a href="/resources" class="text-gray-400 hover:text-white transition-colors duration-300">Resources</a></li>
            <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors duration-300">Blog</a></li>
            <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors duration-300">Contact</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-lg font-semibold mb-4">Support</h4>
          <ul class="space-y-2">
            <li><a href="/support" class="text-gray-400 hover:text-white transition-colors duration-300">Customer Support</a></li>
            <li><a href="/guides/security-hiring" class="text-gray-400 hover:text-white transition-colors duration-300">Security Hiring Guide</a></li>
            <li><a href="/faq" class="text-gray-400 hover:text-white transition-colors duration-300">FAQ</a></li>
            <li><a href="/privacy-policy" class="text-gray-400 hover:text-white transition-colors duration-300">Privacy Policy</a></li>
            <li><a href="/terms" class="text-gray-400 hover:text-white transition-colors duration-300">Terms of Service</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-gray-700 mt-10 pt-6 text-center md:text-left md:flex md:justify-between md:items-center">
        <p class="text-gray-400">Â© {new Date().getFullYear()} Knighthood Corporate Services Pvt Ltd. All rights reserved.</p>
        
        <div class="mt-4 md:mt-0">
          <a href="/privacy-policy" class="text-gray-400 hover:text-white transition-colors duration-300 mr-4">Privacy Policy</a>
          <a href="/terms" class="text-gray-400 hover:text-white transition-colors duration-300">Terms</a>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Toggle mobile menu
    document.addEventListener('DOMContentLoaded', () => {
      const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
      const mobileMenu = document.querySelector('.mobile-menu');
      
      mobileMenuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    });
  </script>
</body>
</html>

<style is:global>
  /* Base styles that will be applied globally */
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Inter', sans-serif;
  }
  
  .nav-link {
    @apply text-gray-700 hover:text-blue-600 font-medium transition-colors duration-300;
  }
  
  .mobile-nav-link {
    @apply text-gray-700 hover:text-blue-600 font-medium transition-colors duration-300 border-b border-gray-100;
  }
</style>
