---
interface Props {
  image: string;
  alt: string;
  title: string;
  href?: string; // Optional link
  description?: string; // Optional description
}

const { image, alt, title, href, description } = Astro.props;
---

<div class="flex flex-col items-center rounded-lg overflow-hidden shadow-md">
  {
    href ? (
      <a href={href}>
        <img src={image} alt={alt} class="w-full h-48 object-contain hover:scale-110 transition-transform duration-300" />
      </a>
    ) : (
      <img src={image} alt={alt} class="w-full h-48 object-contain" />
    )
  }
  <div class="p-4">
    <h3 class="text-xl font-semibold text-center">{title}</h3>
    {description && <p class="mt-2 text-gray-600">{description}</p>}
  </div>
</div>
