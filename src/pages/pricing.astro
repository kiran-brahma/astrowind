---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Stellar Pricing for Every Business"
    subtitle="Choose the perfect plan that aligns with your business needs."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Security Services Pricing"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'basic',
        subtitle: 'Optimal choice for Small Business and MSME',
        
        items: [
          {
            description: 'Quarterly Security personnel training',
          },
          {
            description: 'Site Audit every 15 days',
          },
          {
            description: 'Personnel change within 7 days',
          },
          {
            description: '15 days credit period',
          },
          
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
      },
      {
        title: 'standard',
        subtitle: 'Optimal choice for efficient security',
       
        items: [
          {
            description: 'Security personnel training every 2 months',
          },
          {
            description: 'Site audit every 10 days',
          },
          {
            description: 'Personnel change within 3 days',
          },
          {
            description: 'Discounted Video analytics and central monitoring services',
          },
          {
            description: '30 days Credit Period',
          },
          {
            description: 'Detailed Annual Security Audit Report',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'premium',
        subtitle: 'Optimal choice for Corporates with enhanced security needs',
        
        items: [
          {
            description: 'Monthly Security Personnel as per requirement',
          },
          {
            description: 'Bi-Weekly Security Audits',
          },
          {
            description: 'Personne Change within 24 hours',
          },
          {
            description: '45 days Credit Period',
          },
          {
            description: 'Discounted Video analytics and central monitoring services',
          },
          {
            description: 'Quarterly Security Audit Reports',
          },
          {
            description: 'Emergency response services',
          },
          {
            description: 'Quick Response team support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
      },
    ]}
  />

  <Prices
    title="Staffing Services Pricing"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'basic',
        subtitle: 'Optimal choice for Small Business and MSME',

        items: [
          {
            description: 'Basic Compliance Reports',
          },
          
          {
            description: 'Personnel change within 15 days',
          },
          {
            description: 'Payment on reciept',
          },
          {
            description: 'Online Payroll access to HR',
          },
          {
            description: 'Basic Annual Wage and Compliance Audit Report',
          },
          
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
      },
      {
        title: 'standard',
        subtitle: 'Optimal choice for efficient security',
        price: 69,
        period: 'Per Month',
        items: [
          {
            description: 'Detailed Compliance Reports for all employees',
          },
          {
            description: 'Personnel change within 7 days',
          },
          {
            description: 'Online Payroll access to all Employees',
          },
          {
            description: '15 days Credit Period',
          },
          {
            description: 'Detailed Annual Wage and Compliance Audit Report',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Tiered Pricing Plans',
        description: 'Choose from a range of pricing plans designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      
      {
        title: 'Upgrade Value',
        description: 'Upgrade to higher-tier plans to unlock more features and benefits for an enhanced experience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24H support',
        description: 'Questions answered via WhatsApp, email or phone, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Schedule a Call',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review our Service Proposal',
        icon: 'tabler:number-4',
      },
      {
        title: 'Review our Pricing Proposal',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Service Commencement',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do the plans come with customer support?',
        description:
          'Absolutely, all plans include access to our dedicated customer support to assist you with any queries or concerns.',
      },
      {
        title: 'Is there a trial period for the different plans?',
        description:
          "Unfortunately, we don't offer trial periods for the plans. However, you can check out our demo section to preview the quality of our templates.",
      },
      {
        title: 'Can I switch between plans?',
        description:
          'Certainly! You can easily upgrade or downgrade your plan, at any time, to find the one that best suits your evolving requirements.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods to ensure a convenient and secure transaction process.',
      },
      {
        title: 'Are there any hidden fees beyond the finalised cost?',
        description:
          'No, our prices cost includes wages, compliances and our service fee. GST is charged as per actuals under each plan. There are no hidden fees or extra charges.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to transform your Staffing?"
    subtitle="Join our community of satisfied customers who have transformed their staffing needs with our services."
    actions={[
      {
        variant: 'primary',
        text: 'Schedule a Call',
        href: '/contact',
      },
    ]}
  />
</Layout>
