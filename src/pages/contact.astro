---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <script async src="https://tally.so/widgets/embed.js"></script>
  
    <iframe src="https://tally.so/r/nP6exx?transparentBackground=1" width="100%" height="800" ></iframe>


  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Chat with us on WhatsApp for inquiries related to our services .`,
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about purchases, customization options and other aspects of our services.',
      },
      {
        title: 'Technical support',
        description:
          'Write to us if you are keen to understand any specific aspects of our services.',
      },
      {
        title: 'Phone',
        description: '011-41013522',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'support@knighthood.co',
        icon: 'tabler:mail',
      },
      {
        title: 'Corporate',
        description: 'First Floor, Plot 5, Lane 2, Westend Marg, Saidulajab, New Delhi - 110030',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
